<% if @is_current %>
  <%= render Primer::BaseComponent.new(tag: :em, "aria-label": "Page #{@page}", "aria-current": "page", **@kwargs) do %>
    <%= @page %>
  <% end %>
<% else %>
  <%= render Primer::BaseComponent.new(tag: :a, "aria-label": "Page #{@page}", href: @href_builder.call(@page), **@kwargs) do %>
    <%= @page %>
  <% end %>
<% end %>
